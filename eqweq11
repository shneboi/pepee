-- Services
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local TS = game:GetService("TweenService")

-- Load Spawner
local success, Spawner = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/DeltaGay/femboy/refs/heads/main/GardenSpawner.lua"))()
end)

if not success or not Spawner then
    warn("Failed to load Spawner module.")
    return
end

-- Main UI
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Name = "ModernSpawnerUI"
gui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

local main = Instance.new("Frame")
main.Size = UDim2.new(0, 415, 0, 290)
main.Position = UDim2.new(0.5, 0, 0.5, 0)
main.AnchorPoint = Vector2.new(0.5, 0.5)
main.BackgroundColor3 = Color3.fromRGB(135, 206, 235)
main.Draggable = true
main.Active = true
main.Parent = gui
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 10)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -60, 0, 40)
title.Position = UDim2.new(0, 10, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Rin Scripts v1"
title.TextColor3 = Color3.fromRGB(0, 0, 0)
title.TextSize = 20
title.Font = Enum.Font.GothamBold
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = main

local exitBtn = Instance.new("TextButton")
exitBtn.Size = UDim2.new(0, 24, 0, 24)
exitBtn.Position = UDim2.new(1, -30, 0, 8)
exitBtn.Text = "X"
exitBtn.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
exitBtn.TextColor3 = Color3.fromRGB(0, 0, 0)
exitBtn.Font = Enum.Font.GothamBold
exitBtn.TextSize = 14
exitBtn.Parent = main
Instance.new("UICorner", exitBtn).CornerRadius = UDim.new(0, 6)

exitBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
end)

local tabBar = Instance.new("Frame")
tabBar.Size = UDim2.new(1, -20, 0, 30)
tabBar.Position = UDim2.new(0, 10, 0, 45)
tabBar.BackgroundTransparency = 1
tabBar.Parent = main

local tabLayout = Instance.new("UIListLayout")
tabLayout.FillDirection = Enum.FillDirection.Horizontal
tabLayout.Padding = UDim.new(0, 8)
tabLayout.Parent = tabBar

local content = Instance.new("Frame")
content.Size = UDim2.new(1, -40, 1, -90)
content.Position = UDim2.new(0, 20, 0, 80)
content.BackgroundTransparency = 1
content.Parent = main

local function createButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 220, 0, 36)
    btn.Text = text
    btn.BackgroundColor3 = Color3.fromRGB(255, 223, 0)
    btn.TextColor3 = Color3.fromRGB(0, 0, 0)
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 16
    btn.Parent = nil
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(60, 60, 60)
    stroke.Thickness = 1
    stroke.Parent = btn
    btn.MouseButton1Click:Connect(function()
        btn.Size = UDim2.new(0, 210, 0, 34)
        task.wait(0.1)
        btn.Size = UDim2.new(0, 220, 0, 36)
        callback()
    end)
    return btn
end

local function createInput(placeholder)
    local box = Instance.new("TextBox")
    box.Size = UDim2.new(0, 220, 0, 36)
    box.PlaceholderText = placeholder
    box.Text = ""
    box.BackgroundColor3 = Color3.fromRGB(255, 255, 153)
    box.TextColor3 = Color3.fromRGB(0, 0, 0)
    box.Font = Enum.Font.Gotham
    box.TextSize = 16
    Instance.new("UICorner", box).CornerRadius = UDim.new(0, 8)
    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(255, 165, 0)
    stroke.Thickness = 2
    stroke.Parent = box
    return box
end

local function createDropdown(placeholder, items)
    local selected = ""
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 220, 0, 36)
    button.Text = placeholder
    button.Font = Enum.Font.Gotham
    button.TextSize = 16
    button.TextColor3 = Color3.fromRGB(0, 0, 0)
    button.BackgroundColor3 = Color3.fromRGB(255, 255, 153)
    Instance.new("UICorner", button).CornerRadius = UDim.new(0, 8)
    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(255, 165, 0)
    stroke.Thickness = 2
    stroke.Parent = button

    local listFrame = Instance.new("Frame")
    listFrame.Size = UDim2.new(0, 220, 0, math.min(#items * 25, 150))
    listFrame.Position = UDim2.new(0, 0, 1, 0)
    listFrame.BackgroundColor3 = Color3.fromRGB(255, 250, 205)
    listFrame.Visible = false
    listFrame.Parent = button
    listFrame.ClipsDescendants = true

    local scroll = Instance.new("ScrollingFrame")
    scroll.Size = UDim2.new(1, 0, 1, 0)
    scroll.ScrollBarThickness = 6
    scroll.BackgroundTransparency = 1
    scroll.Parent = listFrame

    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 2)
    layout.SortOrder = Enum.SortOrder.LayoutOrder
    layout.Parent = scroll

    for _, item in ipairs(items) do
        local itemBtn = Instance.new("TextButton")
        itemBtn.Size = UDim2.new(1, -4, 0, 25)
        itemBtn.Text = item
        itemBtn.Font = Enum.Font.Gotham
        itemBtn.TextSize = 14
        itemBtn.TextColor3 = Color3.fromRGB(0, 0, 0)
        itemBtn.BackgroundColor3 = Color3.fromRGB(255, 250, 205)
        itemBtn.Parent = scroll
        itemBtn.MouseButton1Click:Connect(function()
            selected = item
            button.Text = item
            listFrame.Visible = false
        end)
    end

    button.MouseButton1Click:Connect(function()
        listFrame.Visible = not listFrame.Visible
    end)

    return button, function()
        return selected
    end
end

local function createTab(name)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 90, 1, 0)
    button.Text = name
    button.BackgroundColor3 = Color3.fromRGB(124, 252, 0)
    button.TextColor3 = Color3.fromRGB(0, 0, 0)
    button.Font = Enum.Font.GothamSemibold
    button.TextSize = 14
    button.Parent = tabBar
    Instance.new("UICorner", button).CornerRadius = UDim.new(0, 6)

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundTransparency = 1
    frame.Visible = false
    frame.Parent = content

    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 10)
    layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    layout.Parent = frame

    button.MouseButton1Click:Connect(function()
        for _, f in pairs(content:GetChildren()) do
            if f:IsA("Frame") then
                f.Visible = false
            end
        end
        frame.Visible = true
    end)

    return frame
end

-- All Pet Names
local petNames = {
    "Bunny", "Dog", "Golden Lab", "Black Bunny", "Cat", "Chicken", "Deer",
    "Bee", "Orange Tabby", "Spotted Deer", "Pig", "Rooster",
    "Monkey", "Honey Bee", "Cow", "Silver Monkey", "Sea Otter",
    "Turtle", "Polar Bear", "Snail", "Giant Ant", "Praying Mantis", "Mole",
    "Frog", "Blood Hedgehog", "Butterfly", "Frog",
    "Panda", "Blood Kiwi", "Chicken Zombie", "Red Fox",
    "Grey Mouse", "Brown Mouse", "Squirrel", "Bear Bee", "Petal Bee",
    "Queen Bee", "Dragonfly", "Night Owl", "Raccoon", "Blood Owl",
    "Disco Bee", "Wasp", "Tarantula Hawk", "Moth"
}

-- PET TAB
local petTab = createTab("üêæ Pet")
local petDropdown, getPetName = createDropdown("Select Pet", petNames) 
petDropdown.Parent = petTab
local weightInput = createInput("Weight") weightInput.Parent = petTab
local ageInput = createInput("Age") ageInput.Parent = petTab
createButton("Spawn", function()
    local pet = getPetName()
    local weight = tonumber(weightInput.Text)
    local age = tonumber(ageInput.Text)
    if pet ~= "" and weight and age then
        Spawner.SpawnPet(pet, age, weight)
    else
        warn("Please complete all fields correctly.")
    end
end).Parent = petTab

-- Final
petTab.Visible = true
