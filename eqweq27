local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Load Spawner
local success, Spawner = pcall(function()
    return loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.plua"))()
end)

if not success or not Spawner then
    warn("❌ Failed to load Spawner module.")
    return
end

-- Create Window
local Window = Rayfield:CreateWindow({
    Name = "Rin Scripts v4 ⚡",
    LoadingTitle = "Rin Scripts",
    LoadingSubtitle = "Powered by Rayfield",
    ConfigurationSaving = {
        Enabled = false,
    },
    Discord = {
        Enabled = false,
    },
    KeySystem = false
})

--------------------------------------------------
-- 🦖 PET TAB
--------------------------------------------------

local petName, mutation, age, weight = "", "", 0, 0

local PetTab = Window:CreateTab("🦖 Pet", Color3.fromRGB(0,170,255))

PetTab:CreateInput({
    Name = "Pet Name",
    PlaceholderText = "Enter pet name",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        petName = text
    end,
})

PetTab:CreateInput({
    Name = "Mutation",
    PlaceholderText = "Optional mutation",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        mutation = text
    end,
})

PetTab:CreateInput({
    Name = "Age",
    PlaceholderText = "Enter age (number)",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        age = tonumber(text) or 0
    end,
})

PetTab:CreateInput({
    Name = "Weight (KG)",
    PlaceholderText = "Enter weight in KG",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        weight = tonumber(text) or 0
    end,
})

PetTab:CreateButton({
    Name = "⚡ Spawn Pet",
    Callback = function()
        if petName ~= "" and age > 0 and weight > 0 then
            local fullName = mutation ~= "" and (mutation .. " " .. petName) or petName
            Spawner.SpawnPet(fullName, weight, age, mutation)
        else
            Rayfield:Notify({
                Title = "Missing or Invalid Input",
                Content = "Please enter a name, age, and weight correctly.",
                Duration = 5,
            })
        end
    end,
})

--------------------------------------------------
-- 🌿 SEED TAB
--------------------------------------------------

local seedName = ""
local SeedTab = Window:CreateTab("🌿 Seed", Color3.fromRGB(0,255,0))

SeedTab:CreateInput({
    Name = "Seed Name",
    PlaceholderText = "Enter seed name",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        seedName = text
    end,
})

SeedTab:CreateButton({
    Name = "🌱 Spawn Seed",
    Callback = function()
        if seedName ~= "" then
            Spawner.SpawnSeed(seedName)
        else
            Rayfield:Notify({
                Title = "Missing Input",
                Content = "Please enter a Seed Name.",
                Duration = 5,
            })
        end
    end,
})

--------------------------------------------------
-- 🥚 EGG TAB
--------------------------------------------------

local eggName = ""
local EggTab = Window:CreateTab("🥚 Egg", Color3.fromRGB(255,255,80))

EggTab:CreateInput({
    Name = "Egg Name",
    PlaceholderText = "Enter egg name",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        eggName = text
    end,
})

EggTab:CreateButton({
    Name = "🥚 Spawn Egg",
    Callback = function()
        if eggName ~= "" then
            Spawner.SpawnEgg(eggName)
        else
            Rayfield:Notify({
                Title = "Missing Input",
                Content = "Please enter an Egg Name.",
                Duration = 5,
            })
        end
    end,
})

--------------------------------------------------
-- 🎰 SPIN TAB
--------------------------------------------------

local spinName = ""
local SpinTab = Window:CreateTab("🎰 Spin", Color3.fromRGB(255,100,255))

SpinTab:CreateInput({
    Name = "Spin Name",
    PlaceholderText = "Enter spin name",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        spinName = text
    end,
})

SpinTab:CreateButton({
    Name = "🎰 Spin",
    Callback = function()
        if spinName ~= "" then
            Spawner.Spin(spinName)
        else
            Rayfield:Notify({
                Title = "Missing Input",
                Content = "Please enter a Spin Name.",
                Duration = 5,
            })
        end
    end,
})
